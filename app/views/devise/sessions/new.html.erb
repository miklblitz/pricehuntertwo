<div class="d-flex flex-column mt-4" style="max-width: 600px; margin: 0 auto;">
  <h2 class="text-center mt-4">Авторизация</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mt-4">
      <%= f.label :email, 'Эл. почта' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= f.label :password, 'Пароль' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group mt-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Запомнить меня' %>
      </div>
    <% end %>

    <div class="actions form-group mt-4">
      <%= f.submit "Войти", class: "btn btn-primary btn-md" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

