<div class="d-flex flex-column mt-4" style="max-width: 600px; margin: 0 auto;">

  <h2 class="text-center">Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mt-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= f.label :password, 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(Длина пароля не менее <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= f.label :password_confirmation, 'Повтор пароля' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions form-group mt-4">
      <%= f.submit "Сохранить", class: "btn btn-primary btn-md" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>